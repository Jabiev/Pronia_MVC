@model SliderCommon
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Form Elements</div>
            </div>
            <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label asp-for="SliderModel.Image"></label>
                                <input asp-for="SliderModel.Image"
                                       class="form-control"
                                       placeholder="Enter Image Url"
                                       accept="image/*" />
                                <span class="text-danger" asp-validation-for="SliderModel.Image"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SliderModel.Title"></label>
                                <input asp-for="SliderModel.Title"
                                       class="form-control"
                                       placeholder="Enter Title" />
                                <span class="text-bg-dark" asp-validation-for="SliderModel.Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SliderModel.Description"></label>
                                <input asp-for="SliderModel.Description"
                                       class="form-control"
                                       placeholder="Enter Description" />
                                <span class="text-danger" asp-validation-for="SliderModel.Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SliderModel.Offer"></label>
                                <input asp-for="SliderModel.Offer"
                                       class="form-control"
                                       placeholder="Enter Offer" />
                                <span class="text-danger" asp-validation-for="SliderModel.Offer"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <input type="submit" class="btn btn-success" value="SAVE"></input>
                        <button class="btn btn-danger">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>